namespace example = {

  mod Logic = {
    var a : logic
    var b : logic[32]
    var c : logic[128]

    def __init__() = {
      // implicit conversion and size checking for interger
      // literals
      a = 1
      b = 42

      // bitstring syntax with single quotes
      a = '1'
      b = 0xffff_00ab

      // repetition
      b = '1010' * 4

      // object oriented?
      c = '0' * c.size() 
      c.fill('10')

      // or functional?
      c = '0' * len(c)
      fill(c, '10')

      // concatenation using list syntax
      c = [ b, '0110'*4, b, b ]

      // slicing
      b[16:2:31] = '1  00 11 0 1111'
      fill(b[0:3,8,16,24,30:-1], 'u')
    }
  }

}
