namespace demo = {

    socket binop = {
        <= a : int
        <= b : int
        => y : int
    }


    mod adder : binop = {
        var test : int

        process = {
            port.y = port.a + port.b;
            test = port.a;
        }
    }

    mod multiplier : binop = {
        process = { port.y = port.a * port.b; }
    }


    mod dataflow = {
        var add_res : int
        var mult_res : int

        def __init__() = {
            plus.a = 0;
            plus.b = 0;
        }


        periodic(2 ns) = {
            plus.a = plus.a + 1;
            plus.b = plus.b + 1;
        }

        inst plus : adder
        inst mult : multiplier

        process = {
            mult.a = plus.y;
            mult.b = 2;
            add_res = plus.y;
            mult_res = mult.y;
        }
    }



}
