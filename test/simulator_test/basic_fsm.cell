mod test = {

  var clk : bool
  var reset : bool
  var ctr : int
  var state : int
  var test : int


  def __init__() = {
    state = 1;
    ctr = 0;
    reset = true;
    clk = false;
    test = 50 ns;
  }

  periodic(4 ns) = {
    clk = !clk;
  }

  once(8 ns) = {
    reset = false;
  }

  recurrent(t) = {
    test = test - 10 ns;
    t + test
  }

  process = {
    if( reset ) {
      state = 1;
    } else if( @clk && clk ) {
      if( state == 1 ) {
        state = 2;
      } else if( state == 2 ) {
        if( ctr == 10 ) {
          state = 3;
        }
      }
    }
  }


  process = {
    if( reset ) {
      ctr = 0;
    } else if( @clk && clk ) {
      if( state == 2 ) {
        ctr = ctr + 1;
      }
    }
  }


}
